\{{#each this}}
<div class="contact-card" data-contact-id="\{{ id }}">
  <div class="profile-image-holder">
    <div class="profile-image" style="background-image: url('\{{auth userImage }}')"></div>
    <i class="fa fa-user"></i>
  </div>
  <div class="contact-info">
    <div class="contact-user-name">\{{ userName }}</div>
    <div class="contact-user-preview-holder">
      <div class="contact-user-preview">\{{ userTitle }}</div>
    </div>
  </div>
  \{{#if pinned}}
  <div class="icon icon-static icon-rotate-45"><i class="fa fa-thumb-tack"></i></div>
  \{{/if}}
</div>
\{{/each}}